  form(action="")
    .form-group
      select.Wide(name='Selectbox' aria-invalid='false')
        option(value='First one') كل الفئات
        option(value='Second One') كل الفئات
        option(value='Third one') كل الفئات
      input.form-control(type="text" placeholder="بحث ...")
      button.site-btn
        i.fas.fa-search

// End Search Form